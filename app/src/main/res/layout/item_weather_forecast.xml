<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/forecast_textSize"
        android:layout_marginLeft="@dimen/field_margin_left"
        android:layout_marginStart="@dimen/field_margin_left"/>

    <TextView
        android:id="@+id/forecast_cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/field_margin_left"
        android:layout_marginStart="@dimen/field_margin_left"
        android:textSize="@dimen/forecast_textSize" />

    <TextView
        android:id="@+id/forecast_tmp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/field_margin_left"
        android:layout_marginStart="@dimen/field_margin_left"
        android:textSize="@dimen/forecast_textSize" />

    <TextView
        android:id="@+id/forecast_tmp_max_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature_degree_default"
        android:textSize="@dimen/forecast_textSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="~"/>

    <TextView
        android:id="@+id/forecast_tmp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/field_margin_left"
        android:layout_marginStart="@dimen/field_margin_left"
        android:textSize="@dimen/forecast_textSize" />

    <TextView
        android:id="@+id/forecast_tmp_min_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature_degree_default"
        android:textSize="@dimen/forecast_textSize" />
</LinearLayout>
