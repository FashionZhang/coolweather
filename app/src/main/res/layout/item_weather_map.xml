<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:contentPadding="4dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        android:paddingEnd="4dp">
        <TextView
            android:id="@+id/location"
            android:textColor="@color/blue_primary_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京浦口"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
        <TextView
            android:id="@+id/cond_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="晴"
            android:layout_below="@+id/location"/>

        <TextView
            android:id="@+id/tmp_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cond_txt"
            android:layout_below="@id/location"
            android:layout_marginStart="4dp"
            android:text="23~17°"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        <TextView
            android:id="@+id/tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cond_txt"
            android:text="明天"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        <TextView
            android:id="@+id/tomorrow_cond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阴"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@id/cond_txt"
            android:layout_toEndOf="@id/tomorrow"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/tomorrow_tmp_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="22-19°"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/tomorrow_cond"
            android:layout_below="@+id/cond_txt"/>

        <TextView
            android:id="@+id/after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后天"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@id/tomorrow"
            />

        <TextView
            android:id="@+id/after_cond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="雨"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/after"
            android:layout_below="@id/tomorrow"/>

        <TextView
            android:id="@+id/after_tmp_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17~14°"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginStart="4dp"
            android:layout_below="@id/tomorrow"
            android:layout_toEndOf="@id/after_cond"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
