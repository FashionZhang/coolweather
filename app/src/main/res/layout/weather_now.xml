<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_now"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/LinearLayoutTheme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weather_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度"
            android:textSize="56sp" />

        <TextView
            android:id="@+id/weather_now_degree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/temperature_degree_default"
            android:layout_marginLeft="8dp"
            android:textSize="56sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/now_cond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴"
            android:textSize="@dimen/now_textSize" />

        <TextView
            android:id="@+id/now_tmp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="最高温度"
            android:textSize="@dimen/now_textSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/now_textSize" />

        <TextView
            android:id="@+id/now_tmp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低温度"
            android:textSize="@dimen/now_textSize" />
    </LinearLayout>
</LinearLayout>
