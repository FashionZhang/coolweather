<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="1"
        android:dialogTitle="@string/pref_title_temperature_unit"
        android:entries="@array/list_preference_entries_temperature"
        android:entryValues="@array/list_preference_entry_value_temperature"
        android:key="temperature_unit"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_temperature_unit"/>

    <Preference android:title="@string/pref_title_about">
        <intent
            android:action="com.ikotori.coolweather.SETTING_ABOUT_ACTIVITY"
            android:targetClass="com.ikotori.coolweather.about.AboutActivity"
            android:targetPackage="com.ikotori.coolweather" />
    </Preference>

</PreferenceScreen>