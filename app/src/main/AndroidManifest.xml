<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ikotori.coolweather">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.WeatherHomeActivity"
            android:label="@string/title_activity_weather_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cityselect.CitySelectActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".citysearch.CitySearchActivity"
            android:label="a"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".setting.SettingsActivity"
            android:label="@string/setting"
            android:theme="@style/ActionBar" />
        <activity android:name=".about.AboutActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.ikotori.coolweather.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".moreweather.MoreWeatherActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>